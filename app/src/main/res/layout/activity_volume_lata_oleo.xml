<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE6E9"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:text="Calculadora Volume Lata Oleo Cilindrica"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/edtRaioBaseLata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Raio da base:"
        android:layout_margin="10dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtAlturaLata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="% de Aumento"
        android:layout_margin="10dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcVolLata"
        style="@style/AppButtonStyle"
        android:layout_height="69dp"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:text="Calcular Volume da LAta" />

    <LinearLayout
        android:id="@+id/layoutVolumeLata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtVolumeLata"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:text="Volume da Lata:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVolumeLataRes"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>
