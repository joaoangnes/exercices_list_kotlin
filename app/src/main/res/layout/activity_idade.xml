<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE6E9"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:text="Calculadora de Idade"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:text="Insira sua data de nacimento:"
        android:textSize="24sp"
        android:textStyle="normal"/>

    <DatePicker
        android:id="@+id/dpDataNascimento"
        android:layout_width="301dp"
        android:layout_height="135dp"
        android:layout_margin="10dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:ems="10"
        android:hint="Data Nascimento"
        android:inputType="none" />

    <Button
        android:id="@+id/btnCalcIdade"
        style="@style/AppButtonStyle"
        android:layout_height="69dp"
        android:textSize="16sp"
        android:text="Calcular Idade" />

    <LinearLayout
        android:id="@+id/layoutIdade"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtIdadeUser"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:text="Sua idade:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIdadeUserRes"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>
