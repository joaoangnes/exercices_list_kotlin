<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE6E9"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:text="Calculadora Média Final Aluno"
        android:textSize="27sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/edtNota1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nota 1º Bimestre"
        android:layout_margin="10dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtNota2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nota 2º Bimestre"
        android:layout_margin="10dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtNota3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nota 3º Bimestre"
        android:layout_margin="10dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtNota4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nota 4º Bimestre"
        android:layout_margin="10dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcMedia"
        style="@style/AppButtonStyle"
        android:layout_height="69dp"
        android:textSize="15sp"
        android:text="Calcular Média Final" />

    <LinearLayout
        android:id="@+id/layoutMediaFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtMediaFinal"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:text="Média final:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMediaFinalRes"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>
